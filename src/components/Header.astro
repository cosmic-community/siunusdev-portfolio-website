---
// src/components/Header.astro
import { getCompanyInfo } from '../lib/cosmic'

const companyInfo = await getCompanyInfo()
const companyName = companyInfo?.metadata?.company_name || 'SIUNUSDEV'
const logoUrl = companyInfo?.metadata?.logo?.imgix_url
---

<header class="sticky top-0 z-40 bg-white/80 dark:bg-gray-900/80 backdrop-blur-md border-b border-gray-200 dark:border-gray-700">
  <nav class="container">
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-3 group">
        {logoUrl && (
          <img 
            src={`${logoUrl}?w=80&h=80&fit=crop&auto=format,compress`}
            alt={`${companyName} Logo`}
            width="40"
            height="40"
            class="rounded-lg transition-transform duration-200 group-hover:scale-105"
          />
        )}
        <span class="text-xl md:text-2xl font-bold text-gray-900 dark:text-white">
          {companyName}
        </span>
      </a>

      <!-- Navigation Links -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="#services" class="text-gray-700 dark:text-gray-300 hover:text-primary dark:hover:text-primary-light font-medium">
          Layanan
        </a>
        <a href="#products" class="text-gray-700 dark:text-gray-300 hover:text-primary dark:hover:text-primary-light font-medium">
          Produk
        </a>
        <a href="#technologies" class="text-gray-700 dark:text-gray-300 hover:text-primary dark:hover:text-primary-light font-medium">
          Teknologi
        </a>
        <a href="#contact" class="btn btn-primary">
          Hubungi Kami
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="md:hidden p-2 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800" aria-label="Toggle menu">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col space-y-4">
        <a href="#services" class="text-gray-700 dark:text-gray-300 hover:text-primary dark:hover:text-primary-light font-medium">
          Layanan
        </a>
        <a href="#products" class="text-gray-700 dark:text-gray-300 hover:text-primary dark:hover:text-primary-light font-medium">
          Produk
        </a>
        <a href="#technologies" class="text-gray-700 dark:text-gray-300 hover:text-primary dark:hover:text-primary-light font-medium">
          Teknologi
        </a>
        <a href="#contact" class="btn btn-primary w-full text-center">
          Hubungi Kami
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const menuButton = document.getElementById('mobile-menu-button')
  const mobileMenu = document.getElementById('mobile-menu')

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden')
  })

  // Close mobile menu when clicking on a link
  const mobileLinks = mobileMenu?.querySelectorAll('a')
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden')
    })
  })

  // Smooth scroll for anchor links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault()
      const target = document.querySelector(this.getAttribute('href') as string)
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        })
      }
    })
  })
</script>