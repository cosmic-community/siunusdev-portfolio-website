---
// src/components/Footer.astro
import { getSiteSettings, getCompanyInfo } from '../lib/cosmic'

const siteSettings = await getSiteSettings()
const companyInfo = await getCompanyInfo()

const companyName = companyInfo?.metadata?.company_name || 'SIUNUSDEV'
const copyright = siteSettings?.metadata?.footer_copyright || 'Â© 2025. Hak cipta dilindungi.'
const socialLinks = siteSettings?.metadata?.social_links
const marketplaceLinks = siteSettings?.metadata?.marketplace_links
const newsletterEnabled = siteSettings?.metadata?.newsletter_enabled
---

<footer class="bg-gray-50 dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700 mt-20">
  <div class="container py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="space-y-4">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
          {companyName}
        </h3>
        <p class="text-gray-600 dark:text-gray-400">
          Solusi berbasis teknologi untuk Web Development, Mobile Apps, dan Cloud Services.
        </p>
      </div>

      <!-- Quick Links -->
      <div class="space-y-4">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
          Link Cepat
        </h3>
        <ul class="space-y-2">
          <li>
            <a href="#services" class="text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-primary-light">
              Layanan
            </a>
          </li>
          <li>
            <a href="#products" class="text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-primary-light">
              Produk
            </a>
          </li>
          <li>
            <a href="#technologies" class="text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-primary-light">
              Teknologi
            </a>
          </li>
          <li>
            <a href="#contact" class="text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-primary-light">
              Kontak
            </a>
          </li>
        </ul>
      </div>

      <!-- Social Links -->
      {socialLinks && (
        <div class="space-y-4">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
            Sosial Media
          </h3>
          <ul class="space-y-2">
            {socialLinks.github && (
              <li>
                <a href={socialLinks.github} target="_blank" rel="noopener noreferrer" class="text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-primary-light flex items-center space-x-2">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                  <span>GitHub</span>
                </a>
              </li>
            )}
            {socialLinks.email && (
              <li>
                <a href={socialLinks.email} class="text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-primary-light flex items-center space-x-2">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                  <span>Email</span>
                </a>
              </li>
            )}
          </ul>
        </div>
      )}

      <!-- Marketplace Links -->
      {marketplaceLinks && (
        <div class="space-y-4">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
            Marketplace
          </h3>
          <ul class="space-y-2">
            {marketplaceLinks.tokopedia && (
              <li>
                <a href={marketplaceLinks.tokopedia} target="_blank" rel="noopener noreferrer" class="text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-primary-light">
                  Tokopedia
                </a>
              </li>
            )}
            {marketplaceLinks.shopee && (
              <li>
                <a href={marketplaceLinks.shopee} target="_blank" rel="noopener noreferrer" class="text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-primary-light">
                  Shopee
                </a>
              </li>
            )}
            {marketplaceLinks.lynk && (
              <li>
                <a href={marketplaceLinks.lynk} target="_blank" rel="noopener noreferrer" class="text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-primary-light">
                  Lynk
                </a>
              </li>
            )}
            {marketplaceLinks.mayar && (
              <li>
                <a href={marketplaceLinks.mayar} target="_blank" rel="noopener noreferrer" class="text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-primary-light">
                  Mayar
                </a>
              </li>
            )}
          </ul>
        </div>
      )}
    </div>

    <!-- Newsletter Section -->
    {newsletterEnabled && (
      <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700">
        <div class="max-w-md mx-auto text-center">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
            Berlangganan Newsletter
          </h3>
          <form class="flex gap-2">
            <input
              type="email"
              placeholder="Email Anda"
              class="flex-1 px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-primary"
              required
            />
            <button type="submit" class="btn btn-primary">
              Subscribe
            </button>
          </form>
        </div>
      </div>
    )}

    <!-- Copyright -->
    <div class="mt-8 pt-8 border-t border-gray-200 dark:border-gray-700 text-center">
      <p class="text-gray-600 dark:text-gray-400">
        {copyright}
      </p>
    </div>
  </div>
</footer>