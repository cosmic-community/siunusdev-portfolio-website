---
// src/components/HeroSection.astro
import { getCompanyInfo } from '../lib/cosmic'

const companyInfo = await getCompanyInfo()

const heroTitle = companyInfo?.metadata?.hero_title || 'SIUNUSDEV'
const heroSubtitle = companyInfo?.metadata?.hero_subtitle || 'Teknologi muncul karena adanya MASALAH. Maka (seharusnya) teknologi adalah SOLUSI.'
const whatsappNumber = companyInfo?.metadata?.whatsapp_number
---

<section class="relative py-20 md:py-32 overflow-hidden">
  <!-- Background gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary/10 via-transparent to-secondary/10 dark:from-primary/5 dark:to-secondary/5"></div>
  
  <div class="container relative">
    <div class="max-w-4xl mx-auto text-center animate-fade-in">
      <!-- Title -->
      <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-6 text-gray-900 dark:text-white animate-slide-up">
        {heroTitle}
      </h1>
      
      <!-- Subtitle -->
      <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 mb-12 max-w-3xl mx-auto animate-slide-up animate-delay-100">
        {heroSubtitle}
      </p>
      
      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center animate-slide-up animate-delay-200">
        <a href="#services" class="btn btn-primary text-lg px-8 py-4">
          Lihat Layanan
        </a>
        {whatsappNumber && (
          <a 
            href={`https://wa.me/${whatsappNumber.replace(/\D/g, '')}`} 
            target="_blank" 
            rel="noopener noreferrer" 
            class="btn btn-secondary text-lg px-8 py-4 flex items-center justify-center space-x-2"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            <span>WhatsApp</span>
          </a>
        )}
      </div>
    </div>
  </div>
</section>