---
// src/components/TechnologiesSection.astro
import { getTechnologies } from '../lib/cosmic'
import TechnologyCard from './TechnologyCard.astro'

const technologies = await getTechnologies()
---

<section id="technologies" class="py-20 bg-gray-50 dark:bg-gray-800/50">
  <div class="container">
    <h2 class="section-title">Teknologi yang Kami Gunakan</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {technologies && technologies.length > 0 ? (
        technologies.map((technology, index) => (
          <div 
            class="animate-slide-up"
            style={`animation-delay: ${index * 100}ms`}
          >
            <TechnologyCard technology={technology} />
          </div>
        ))
      ) : (
        <div class="col-span-full text-center py-12">
          <p class="text-gray-600 dark:text-gray-400">Belum ada teknologi yang tersedia.</p>
        </div>
      )}
    </div>
  </div>
</section>